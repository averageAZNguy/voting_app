<% include partials/header %>
<div class="container">
    <h1><%=polls.question%></h1>    
</div>

<div class="container">
    <canvas id="myChart" ></canvas>
</div>

<script>
    // CREATE BAR CHART
    var ctx = $('#myChart');

   var Poll = <%-JSON.stringify(polls)%>;
    var legend = [];
    var counter = [];
    Poll.choices.forEach(function(choice){
        legend.push(choice.answer);
        counter.push(choice.count);
    });
    
    var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: legend,
        datasets: [{
            label: Poll.question,
            data: counter,
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'rgba(255,99,132,1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
    },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero:true
                    }
                }]
            }
        }
    });

</script>
<% include partials/footer %>